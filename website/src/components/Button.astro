---
interface Props {
  href: string;
  variant?: "primary" | "secondary";
  size?: "sm" | "md" | "lg";
  external?: boolean;
  class?: string;
}

const {
  href,
  variant = "primary",
  size = "md",
  external = false,
  class: className = "",
} = Astro.props;

const baseStyles =
  "inline-flex items-center justify-center font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-zinc-950";

const variants = {
  primary:
    "bg-brand-500 text-white hover:bg-brand-600 focus:ring-brand-500 shadow-lg shadow-brand-500/25",
  secondary:
    "bg-zinc-800 text-zinc-100 hover:bg-zinc-700 focus:ring-zinc-500 border border-zinc-700",
};

const sizes = {
  sm: "px-3 py-1.5 text-sm gap-1.5",
  md: "px-5 py-2.5 text-sm gap-2",
  lg: "px-6 py-3 text-base gap-2",
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

<a
  href={href}
  class={classes}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
>
  <slot />
</a>

